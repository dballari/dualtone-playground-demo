{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "preferredVersions": {
        "php": "latest",
        "wp": "latest"
    },
    "siteOptions": {
        "blogname": "Dualtone Demo",
        "blogdescription": "A WordPress demo for the DualTone themeâ€”with user patterns and companion plugins"
    },
    "plugins": [
        "create-block-theme",
        "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/user-demo/source/sahmi-main.zip",
        "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/user-demo/source/block-search-replace-tool-main.zip"
    ],
    "steps": [
        {
            "step": "installTheme",
            "themeZipFile": {
                "resource": "wordpress.org/themes",
                "slug": "dualtone"
            }
        },
        {
            "step": "login",
            "username": "admin",
            "password": "password"
        },
        {
            "step": "wp-cli",
            "command": "wp rewrite structure '/%postname%'"
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/user-demo/source/dualtonedemo.WordPress.2024-07-03.xml"
            }
        }
    ],
    "features": {
        "networking": true
    },
    "landingPage": "/"
}
