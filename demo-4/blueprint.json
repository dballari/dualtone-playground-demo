{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "preferredVersions": {
        "php": "8.0",
        "wp": "beta"
    },
    "landingPage": "/wp-admin/edit.php?post_type=wp_block",
    "login": true,
    "features": {
        "networking": true
    },
    "steps": [
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "Dualtone Demo4",
                "blogdescription": "A WordPress playground demo for the DualTone theme with some demo content, companion plugins and a beta wp version"
            }
        },
        {
            "step": "updateUserMeta",
            "meta": {
            	"admin_color": "ectoplasm"
            },
            "userId": 1
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/source/sahmi.zip"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/source/block-search-replace-tool.zip"
            }
        },
        {
            "step": "installTheme",
            "themeZipFile": {
                "resource": "wordpress.org/themes",
                "slug": "dualtone"
            }
        },
        {
            "step": "runPHP",
            "code": "<?php require_once 'wordpress/wp-load.php';global $wp_rewrite; $wp_rewrite->set_permalink_structure('/%postname%/'); update_option( 'rewrite_rules', FALSE ); $wp_rewrite->flush_rules( true );?>"
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/source/dualtonedemo.xml"
            }
        }
    ]
}
