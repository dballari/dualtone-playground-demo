{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "preferredVersions": {
        "php": "8.0",
        "wp": "beta"
    },
    "landingPage": "/",
    "login": true,
    "features": {
        "networking": true
    },
    "steps": [
        {
            "step": "setSiteOptions",
            "options": {
                "blogname": "Dualtone Demo",
                "blogdescription": "A WordPress demo for the DualTone themeâ€”with user patterns and companion plugins"
            }
        },
        {
            "step": "updateUserMeta",
            "meta": {
            	"admin_color": "ectoplasm"
            },
            "userId": 1
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/user-demo/source/sahmi-main.zip"
            }
        },
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/user-demo/source/block-search-replace-tool-main.zip"
            }
        },
        {
            "step": "installTheme",
            "themeZipFile": {
                "resource": "wordpress.org/themes",
                "slug": "dualtone"
            }
        },
        {
            "step": "runPHP",
            "code": "<?php require_once 'wordpress/wp-load.php';global $wp_rewrite; $wp_rewrite->set_permalink_structure('/%postname%/'); update_option( 'rewrite_rules', FALSE ); $wp_rewrite->flush_rules( true );?>"
        },
        {
            "step": "importWxr",
            "file": {
                "resource": "url",
                "url": "https://raw.githubusercontent.com/dballari/dualtone-playground-demo/main/user-demo/source/dualtonedemo.WordPress.2024-07-03.xml"
            }
        }
    ]
}
